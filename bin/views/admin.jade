extend layout
block header
    script(src='/js/admin.js')
block title
    | wow much admin.
block content
    form(method='post' , action='/logout', id='logout' class="inline")
        input(type='submit', value='log out')
    h2.color0.head Stats
    | - current info for application -
    each val, key in stats
        p.color0.left15 #{key} : #{val}
    
    h2.color0.head Announcement
    .adminPopup
        | - send a global pop up to all connected users. -
        lable
            input(type='checkbox', class='checkbox inline', id='savePopup', checked=checked)
            | Save and open on every page load.
        input(type='text', placeholder='Title', class='block form-control mar5', id='popupTitle', value=title)
        textarea(placeholder='message' class='form-control mar5', id='popupMessage') #{message}
        button(class='btn btn-success', id='send') Send
        - if(popup)
            button(class='btn btn-danger', id='deletePopup') Delete
        
    h2.head Stream Reset
    | - Reset the stream.  All connected clients will be notified. - <br />
    button(id='reset' class='btn btn-primary') Reset Stream
    
    h2.head Kick People
    | - Kick someone out of the queue by name.  Or everyone.  Notification will be sent. - <br />
    lable
        input(type='checkbox', class='checkbox inline', id='kickEveryone', checked=checked)
        | Everyone.
    input(type='text', placeholder='Or by name', class='block form-control mar5 width2', id='kickName', value=title)
    button(id='kick' class='btn btn-danger') Kick
    
    h2.head Current Rover Network config
    | - good for checking the last known network status of the rover. - <br />
    p #{ifconfig}
    
    h2.head Send console command
    | - Send a command to be executed in the rover terminal.  stdout will be displayed below. *CAREFUL!- <br />
    input(id='execCommand', class='block form-control mar5', placeholder=' Command')
    button(class='btn btn-primary', id='execute') Execute
    div#stdout.pad10
        
    
    
