extend layout
block title
    | The Rover
block header
  |<link href='http://api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.css' rel='stylesheet' />
  |<!--[if lte IE 8]>
  |<link href='http://api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.ie.css' rel='stylesheet' >
  |<![endif]-->
  |<script src='http://api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.js'></script>
block content
    #navBar.abs
        button(id='refresh', class='btn btn-primary fright mar20') Refresh
        
    #streamWrap.center
        
        table
            tr
                td
                    #time.fs18
                        | 
                    iframe(src='/video', id='stream')
                    #controlBar
                        button(id='join', class='btn btn-success right15') Control
                        div.btn-group
                            | 
                            button(id='left', class='btn btn-default command')
                                |<span class="glyphicon glyphicon-chevron-left"></span>
                            button(id='reverse' ,class='btn btn-default command')
                                |<span class="glyphicon glyphicon-arrow-down"></span>
                            button(id='forward' ,class='btn btn-default command')
                                |<span class="glyphicon glyphicon-arrow-up"></span>
                            button(id='right', class='btn btn-default command')
                                |<span class="glyphicon glyphicon-chevron-right"></span>

                        button(id='stop' class='btn btn-danger command hide')
                        
                            |<span class="glyphicon glyphicon-remove-circle"></span>
                        .info
                            | you can use arrow keys too
            tr
                td#queue
                    .fs20 queue
                    table.table.table-striped.color1.bg0
                        tr
                            th position
                            th user
                            th seconds left
            tr
                td
                    div#map
    input(type='hidden', id='pageRoom', value='rover')
 
                