    | The Rover
block content
    #navBar.abs
        button(id='refresh', class='btn btn-primary fright mar20') Refresh
        
    #streamWrap.center
        
        table
            tr
                td
                    #time.fs18
                        | 
                    iframe(src='/video', id='stream')
                    #controlBar
                        button(id='join', class='btn btn-success right15') Control
                        div.btn-group
                            | 
                            button(id='left', class='btn btn-default command')
                                |<span class="glyphicon glyphicon-chevron-left"></span>
                            button(id='reverse' ,class='btn btn-default command')
